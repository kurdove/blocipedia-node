<!DOCTYPE html>
<html lang="en">
  <head>
  <% include ../static/partials/head.ejs %>
  </head>
  <body>

      <!-- Navigation -->
      <% include ../static/partials/navbar.ejs %>

      <!-- Page Content -->
      <main class="container">
      <% include ../static/partials/messages.ejs %>

      <h1>Wikis</h1>
      <% if(currentUser) { %>
      <a href="/wikis/new" class="btn btn-success">New Wiki</a>
      <% } %>

      <ul class="list-group">
        <% wikis.forEach((wiki) => { %>
          <% if(wiki.private === false || currentUser.isOwner(currentUser, wiki) || currentUser.isCollaborator(currentUser, wiki)) { %>
            <% if(currentUser) { %>
              <% if(currentUser.isAdmin() || currentUser.isPremium()) { %>
                <li class="list-group-item">
                  <a href="/wikis/<%= wiki.id %>"> <%- wiki.title %> </a>
                </li>
              <% } %>
            <% } %>
          <% } else { %>
            <li class="list-group-item">
              <a href="/wikis/<%= wiki.id %>"> <%- wiki.title %> </a>
            </li>
          <% } %>
        <% }) %>
      </ul>
      
      </main>

      <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>
